<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:weightSum="4"
    android:theme="@style/TransparentBar"
    android:fitsSystemWindows="true"

    tools:context="com.positivevibes.app.Activity.FirstActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/logo_margin_top"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/logo"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/msg_margin_top"
        >

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"

            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.6"
        android:paddingTop="@dimen/get_started_pad_top"
        >

        <Button
            android:id="@+id/get_started"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_background"
            android:text="Get Started"
            android:textColor="@color/green"
            android:textStyle="bold"
            android:textSize="17sp"
            android:layout_margin="20dp"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/last_bar_pad_left"
        >
        <TextView
            android:id="@+id/have_account"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Have an already account ? "
            android:textColor="@color/white"
            android:layout_weight="1.1"
            android:textSize="@dimen/basic_text_size"
            />

    </LinearLayout>
</LinearLayout>
