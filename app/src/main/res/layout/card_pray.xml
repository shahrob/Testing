<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="1dp"
    android:orientation="vertical"
    xmlns:ads="http://schemas.android.com/tools"
    android:descendantFocusability="blocksDescendants"



    >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:elevation="3dp"
        app:cardCornerRadius="0dp"
        >


        <LinearLayout
            android:id="@+id/card_feed_parent_rel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >


            <LinearLayout
                android:id="@+id/first_row_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:id="@+id/profile_img_rel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="2">

                    <ProgressBar
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"/>

                    <de.hdodenhof.circleimageview.CircleImageView

                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/feed_profile_img"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#eaebed"
                        android:layout_centerInParent="true"
                        />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="15dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <TextView
                                android:id="@+id/profile_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="name"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="@dimen/heading_text_size"


                                />
                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            >

                            <RelativeLayout
                                android:layout_width="15dp"
                                android:layout_height="15dp"
                                >
                                <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:src="@drawable/app_icon_"
                                    android:layout_centerInParent="true"
                                    android:layout_alignParentLeft="true"
                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                >
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="Admin"
                                    android:textSize="10sp"
                                    android:gravity="left|center"
                                    android:textColor="#8c8586"
                                    android:textStyle="bold"


                                    />
                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"

                                >

                                <TextView
                                    android:id="@+id/feed_date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="22 march 2018"
                                    android:textSize="10sp"
                                    android:textColor="#8c8586"
                                    android:gravity="left|center"

                                    />
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginBottom="15dp"
                    android:id="@+id/sub_menu_doted">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle"
                        android:layout_centerVertical="true"
                        android:visibility="visible"
                        />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/second_row_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                >


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/feed_des"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Hi i am developing android positivity app. We will live soon Hi i am developing android positivity app. We will live soon Hi i am developing android positivity app. We will live soon hasbncd"
                        android:textColor="#3c3d3e"
                        android:lineSpacingExtra="2dp"
                        android:textSize="15sp"


                        />
                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/count_linear_parent"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:weightSum="3"
                android:orientation="horizontal"
                android:layout_marginLeft="10dp"
                >


                <RelativeLayout
                    android:id="@+id/heart_count_img_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginBottom="2dp"
                    >
                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/pray_filled"



                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/heart_count_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    >

                    <TextView
                        android:id="@+id/like_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="1 persons prayed"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:layout_marginTop="-3dp"
                        android:textStyle="bold"



                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/comment_count_img_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:layout_marginLeft="10dp"
                    >

                    <ImageView
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/feed_comment"


                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/comment_count_rel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="5dp"
                    >
                    <TextView
                        android:id="@+id/comment_count"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:layout_marginTop="-3dp"
                        android:textStyle="bold"




                        />

                </RelativeLayout>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/count_below_line_lin"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@color/line"

                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                ></LinearLayout>

            <LinearLayout
                android:id="@+id/fourth_row_conatiner"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:weightSum="3"
                android:orientation="horizontal"
                >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    ></RelativeLayout>
                <RelativeLayout
                    android:id="@+id/like_heart_rel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"
                    android:layout_marginBottom="2dp"
                    >
                    <ImageView
                        android:id="@+id/like_heart_img"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/feed_like"


                        />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.6"
                    android:id="@+id/pray_text_rel">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:paddingTop="5dp"
                        android:layout_marginTop="-5dp"
                        android:textStyle="bold"
                        android:id="@+id/pray_text"
                        android:text="Pray"



                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/comment_rel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"

                    >

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        app:srcCompat="@drawable/feed_comment"


                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/comment_text_rel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:layout_marginTop="-5dp"
                        android:textStyle="bold"
                        android:text="Comment"




                        />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/share_rel"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:layout_gravity="center"

                    >
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        app:srcCompat="@drawable/feed_share"
                        android:layout_centerInParent="true"

                        />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/share_text_rel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.6"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center|left"
                        android:textColor="#000000"
                        android:layout_marginTop="-5dp"
                        android:textStyle="bold"
                        android:text="Share"




                        />

                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/above_category_list_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:orientation="vertical"
                android:background="@color/line"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="7dp"
                android:background="#eaeaea"
                android:layout_marginBottom="5dp"

                android:orientation="vertical"
                ></LinearLayout>

            <LinearLayout
                android:id="@+id/add_parent_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"

                >



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advertisement"
                    android:paddingLeft="10dp"

                    android:layout_gravity="center"
                    />
                <com.google.android.gms.ads.AdView

                    android:visibility="gone"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/add_one"
                    ads:adSize="MEDIUM_RECTANGLE"
                    ads:adUnitId="@string/add_add_id"
                    android:focusable="true"
                    android:focusableInTouchMode="true"


                    ></com.google.android.gms.ads.AdView>

                <com.google.android.gms.ads.AdView
                    android:visibility="gone"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/add_two"
                    ads:adSize="MEDIUM_RECTANGLE"
                    ads:adUnitId="@string/add_add_id_two"
                    android:focusable="true"
                    android:focusableInTouchMode="true"


                    ></com.google.android.gms.ads.AdView>

                <com.google.android.gms.ads.AdView
                    android:visibility="gone"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/add_three"
                    ads:adSize="MEDIUM_RECTANGLE"
                    ads:adUnitId="@string/add_add_id_three"
                    android:focusable="true"
                    android:focusableInTouchMode="true"


                    ></com.google.android.gms.ads.AdView>

                <com.google.android.gms.ads.AdView
                    android:visibility="gone"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:ads="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/add_four"
                    ads:adSize="MEDIUM_RECTANGLE"
                    ads:adUnitId="@string/add_add_id_four"
                    android:focusable="true"
                    android:focusableInTouchMode="true"


                    ></com.google.android.gms.ads.AdView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="7dp"
                    android:background="#eaeaea"
                    android:layout_marginBottom="5dp"

                    android:orientation="vertical"
                    ></LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>