<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="20dp"
    android:background="@color/white"

    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Reset Password"
        android:textColor="@color/green"

        android:gravity="center"
        android:textSize="15sp"

        />

    <EditText
        android:id="@+id/email_d2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_background"
        android:inputType="textEmailAddress"
        android:hint="Email"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textCursorDrawable="@null"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"
        />


    <EditText
        android:id="@+id/pin_d2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_background"
        android:hint="Enter your pin which you received in email"
        android:textColor="#000000"
        android:textSize="14sp"
        android:textCursorDrawable="@null"
        android:paddingLeft="10dp"
        android:layout_marginTop="10dp"

        />



    <EditText
        android:id="@+id/password_d2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_background"
        android:hint="Password"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textCursorDrawable="@null"
        android:paddingLeft="10dp"

        />

    <EditText
        android:id="@+id/confirm_password_d2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/login_btn_background"
        android:hint="Confirm Password"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="10dp"
        android:textCursorDrawable="@null"
        android:paddingLeft="10dp"

        />




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="30dp"

        >
        <Button
            android:id="@+id/ok_d2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="ok"
            android:textColor="@color/green"
            android:background="@drawable/login_btn_background"



            />

        <LinearLayout
            android:layout_width="0dp"

            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            ></LinearLayout>

        <Button
            android:id="@+id/cancel_d2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="center"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textColor="#f21520"
            android:background="@drawable/login_btn_background"


            />

    </LinearLayout>

</LinearLayout>