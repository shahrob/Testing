<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".Activity.SettingActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2"


        >



        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:weightSum="3"
            android:background="@color/green"
            >

            <RelativeLayout
                android:id="@+id/back_rel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3"
                >

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/back_white_arrow"
                    android:layout_centerInParent="true"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.3"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Settings"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:textSize="@dimen/heading_text_size"

                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                >


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#c2c2c2"
            android:orientation="vertical"


            ></LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GENERAL"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"


                        />
                    <TextView
                        android:id="@+id/share_friends"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share With friends"
                        android:paddingTop="8dp"
                        />
                    <TextView
                        android:id="@+id/rate_us"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:paddingTop="8dp"


                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c2c2c2"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"


                    android:visibility="gone"

                    ></LinearLayout><LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ACCOUNT"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"


                    />
                <TextView
                    android:id="@+id/edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:paddingTop="8dp"
                    android:visibility="gone"
                    />
                <TextView
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Change Password"
                    android:paddingTop="8dp"


                    />

            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c2c2c2"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"



                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SETTINGS"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"


                        />
                    <TextView
                        android:id="@+id/push_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Push Notifications"
                        android:paddingTop="8dp"


                        />
                    <TextView
                        android:id="@+id/select_catagories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Change Categories"
                        android:paddingTop="8dp"
                        android:visibility="gone"


                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c2c2c2"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"



                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SUPPORT"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"


                        />

                    <TextView
                        android:id="@+id/report_problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Report a Problem"
                        android:paddingTop="8dp"


                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c2c2c2"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"



                    ></LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ABOUT"
                        android:textColor="@color/black"
                        android:layout_marginTop="8dp"
                        android:textStyle="bold"


                        />

                    <TextView
                        android:id="@+id/blog"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Blog"
                        android:paddingTop="8dp"


                        />
                    <TextView
                        android:id="@+id/privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Privacy Policy"
                        android:paddingTop="8dp"


                        />
                    <TextView
                        android:id="@+id/terms_services"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Terms of Services"
                        android:paddingTop="8dp"
                        />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Positive Vibes"
                        android:paddingTop="8dp" />
                        <TextView
                            android:id="@+id/update_badge"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:background="@drawable/badge_background"
                            android:textColor="@android:color/white"
                            android:gravity="center"
                            android:textSize="10sp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/invite"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Invite Friends"
                        android:paddingTop="8dp"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#c2c2c2"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp"



                    ></LinearLayout>

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log Out"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/red"
                    android:layout_marginBottom="20dp"
                    android:textSize="@dimen/heading_text_size"

                    />
            </LinearLayout>


        </ScrollView>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.gms.ads.AdView
                xmlns:ads="http://schemas.android.com/apk/res-auto"
                android:id="@+id/adView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                ads:adSize="FULL_WIDTHx60"
                ads:adUnitId="@string/adUnitId">
            </com.google.android.gms.ads.AdView>

        </RelativeLayout>

    </LinearLayout>




</LinearLayout>